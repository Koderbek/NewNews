{% extends 'base.html.twig' %}

{% block title %}Список новостей{% endblock %}

{% block body %}
    <a href="{{ path('news_index') }}">Обновить ленту</a>
    <h1>Список новостей</h1>
    <table class="table">
        <thead>
            <tr>
                <th>Заголовок</th>
                <th>Новость</th>
            </tr>
        </thead>
        <tbody>
        {% for item in items %}
            <tr>
                <td>
                    <label style="color: #2398D6">
                        {{ item.title }}
                    </label>
                    <label>Дата публикации: {{ item.pubDate|date('d-m-Y H:m') }}</label>
                </td>
                <td><label>{{ item.description }}</label></td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Список пуст</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
